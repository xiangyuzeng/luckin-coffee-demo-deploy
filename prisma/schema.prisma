// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  username     String   @unique
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id        String    @id @default(cuid()) @map("_id")
  username  String    @unique
  password  String?
  email     String    @unique
  street    String?
  city      String?
  phone     String?
  image     String?
  role      Role      @default(USER)
  provider  Provider  @default(CREDENTIALS)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  accounts  Account[]
  sessions  Session[]
  orders          Order[]
  loyaltyAccount  LoyaltyAccount?
  preferences     UserPreferences?
}

model Category {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique
  menus     Menu[]   @relation(fields: [menuIDs], references: [id])
  menuIDs   String[]
}

model Image {
  id     String @id @default(cuid()) @map("_id")
  url    String
  menu   Menu   @relation(fields: [menuId], references: [id])
  menuId String
}

model Menu {
  id          String     @id @default(cuid()) @map("_id")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String     @unique
  description String
  price       Float
  images      Image[]
  categories  Category[] @relation(fields: [categoryIDs], references: [id])
  categoryIDs String[]
  cartItems   CartItem[]
  isSignature  Boolean  @default(false)
  calories     Int?
  tags         String[]
  estimatedPrepMinutes Int @default(5)
}

model Order {
  id                    String         @id @default(cuid()) @map("_id")
  paid                  Boolean
  cartItems             CartItem[]
  user                  User           @relation(fields: [userId], references: [id])
  userId                String
  customerName          String
  email                 String
  phone                 String
  pickupName            String         @default("")
  loyaltyPointsEarned   Int            @default(0)
  loyaltyPointsRedeemed Int            @default(0)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  tracking              OrderTracking?
}

model CartItem {
  id         String @id @default(cuid()) @map("_id")
  menu       Menu   @relation(fields: [menuID], references: [id])
  menuID     String
  size       String
  quantity   Int
  order      Order  @relation(fields: [orderId], references: [id])
  orderId    String
  milkType   String @default("REGULAR")
  sugarLevel String @default("NORMAL")
  shots      Int    @default(1)
}

model VerificationToken {
  identifier String   @id @map("_id")
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  STAFF
  ADMIN
}

enum Provider {
  GOOGLE
  CREDENTIALS
}

enum LoyaltyTier {
  BRONZE
  SILVER
  GOLD
}

enum TransactionType {
  EARNED
  REDEEMED
  BONUS
  STREAK
}

enum MilkType {
  REGULAR
  OAT
  ALMOND
  COCONUT
}

enum SugarLevel {
  NONE
  LIGHT
  NORMAL
  EXTRA
}

enum DrinkSize {
  SMALL
  MEDIUM
  LARGE
}

enum OrderStatus {
  PLACED
  PREPARING
  READY
  PICKED_UP
}

model LoyaltyAccount {
  id            String          @id @default(cuid()) @map("_id")
  userId        String          @unique
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  points        Int             @default(0)
  totalEarned   Int             @default(0)
  tier          LoyaltyTier     @default(BRONZE)
  streak        Int             @default(0)
  lastVisit     DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  achievements  Achievement[]
  transactions  PointTransaction[]
}

model PointTransaction {
  id               String         @id @default(cuid()) @map("_id")
  loyaltyAccountId String
  loyaltyAccount   LoyaltyAccount @relation(fields: [loyaltyAccountId], references: [id])
  points           Int
  type             TransactionType
  description      String
  orderId          String?
  createdAt        DateTime       @default(now())
}

model Achievement {
  id               String         @id @default(cuid()) @map("_id")
  loyaltyAccountId String
  loyaltyAccount   LoyaltyAccount @relation(fields: [loyaltyAccountId], references: [id])
  name             String
  description      String
  icon             String
  earnedAt         DateTime       @default(now())
}

model UserPreferences {
  id              String     @id @default(cuid()) @map("_id")
  userId          String     @unique
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  favoriteDrinkId String?
  milkPreference  MilkType   @default(REGULAR)
  sugarLevel      SugarLevel @default(NORMAL)
  defaultSize     DrinkSize  @default(MEDIUM)
  updatedAt       DateTime   @updatedAt
  onboardingComplete Boolean @default(false)
}

model OrderTracking {
  id          String      @id @default(cuid()) @map("_id")
  orderId     String      @unique
  order       Order       @relation(fields: [orderId], references: [id])
  status      OrderStatus @default(PLACED)
  placedAt    DateTime    @default(now())
  preparingAt DateTime?
  readyAt     DateTime?
  pickedUpAt  DateTime?
  updatedAt   DateTime    @updatedAt
  events      OrderEvent[]
}

model OrderEvent {
  id          String        @id @default(cuid()) @map("_id")
  trackingId  String
  tracking    OrderTracking @relation(fields: [trackingId], references: [id])
  status      OrderStatus
  label       String
  createdAt   DateTime      @default(now())
}
